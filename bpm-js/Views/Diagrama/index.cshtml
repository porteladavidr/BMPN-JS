@{
    ViewBag.Title = "Lista de Fluxos";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/styles.css" />
</head>
<body>
    <div class="container">
        <h1>Fluxos Criados</h1>
        <button id="novo-fluxo" class="botao">Novo Fluxo</button>

        <table class="fluxo-tabela">
            <thead>
                <tr>
                    <th>Nome do Fluxo</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody id="fluxo-lista">
                <!-- Aqui será preenchido pela lista de fluxos trazidos do banco -->
            </tbody>
        </table>
    </div>

    <script src="~/Scripts/index.js"></script>
</body>
</html>
